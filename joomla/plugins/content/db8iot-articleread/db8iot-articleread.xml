<?xml version="1.0" encoding="utf-8"?>
<extension version="3.5" type="plugin" group="content" method="upgrade">
	<name>plg_content_db8iot_articleread</name>
	<author>Peter Martin</author>
	<creationDate>September 2016</creationDate>
	<copyright>(C) 2005 - 2016 by Peter Martin. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>joomla@db8.nl</authorEmail>
	<authorUrl>www.db8.nl</authorUrl>
	<version>0.0.1</version>
	<description>PLG_CONTENT_DB8IOT_ARTICLEREAD_XML_DESCRIPTION</description>
	<files>
		<filename plugin="db8iot-articleread">db8iot-articleread.php</filename>
		<folder>language</folder>
		<folder>phpMQTT</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">

				<field type="spacer" name="mqtt" label="PLG_CONTENT_DB8IOT_ARTICLEREAD_MQTT_SETTINGS" />

				<field
						name="mqttbroker"
						type="text"
						default="192.168.3.1"
						description="PLG_CONTENT_DB8IOT_ARTICLEREAD_MQTTBROKER_DESC"
						label="PLG_CONTENT_DB8IOT_ARTICLEREAD_MQTTBROKER_LABEL"
				/>
				<field
						name="mqttport"
						type="text"
						default="1883"
						description="PLG_CONTENT_DB8IOT_ARTICLEREAD_MQTTPORT_DESC"
						label="PLG_CONTENT_DB8IOT_ARTICLEREAD_MQTTPORT_LABEL"
				/>

				<field
						name="mqttclient"
						type="text"
						default="Joomla website"
						description="PLG_CONTENT_DB8IOT_ARTICLEREAD_MQTTCLIENT_DESC"
						label="PLG_CONTENT_DB8IOT_ARTICLEREAD_MQTTCLIENT_LABEL"
				/>

				<field type="spacer" name="topic" label="PLG_CONTENT_DB8IOT_ARTICLEREAD_MQTT_TOPIC" />

				<field
						name="channel"
						type="text"
						default="test"
						description="PLG_CONTENT_DB8IOT_ARTICLEREAD_CHANNEL_DESC"
						label="PLG_CONTENT_DB8IOT_ARTICLEREAD_CHANNEL_LABEL"
				/>

				<field
						name="message"
						type="text"
						default="Another hit"
						description="PLG_CONTENT_DB8IOT_ARTICLEREAD_MESSAGE_DESC"
						label="PLG_CONTENT_DB8IOT_ARTICLEREAD_MESSAGE_LABEL"
				/>

				<field
						name="qos"
						type="text"
						default="0"
						description="PLG_CONTENT_DB8IOT_ARTICLEREAD_QOS_DESC"
						label="PLG_CONTENT_DB8IOT_ARTICLEREAD_QOS_LABEL"
				/>
			</fieldset>
		</fields>
	</config>

</extension>